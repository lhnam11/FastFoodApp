<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivHinhAnh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
       />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivHinhAnh"
        android:layout_toEndOf="@id/ivHinhAnh"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tvMaGiam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã giảm giá"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvThongTinMaGiam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin mã giảm giá"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvPhanTramGiam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phần trăm giảm"
            android:textSize="14sp"/>
    </LinearLayout>

</RelativeLayout>
